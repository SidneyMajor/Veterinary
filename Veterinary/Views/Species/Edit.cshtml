@model Veterinary.Data.Entities.Species

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Species</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" id="contactForm" name="contactForm" class="contactForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Description" class="label "></label>
                <input asp-for="Description" class="form-control" placeholder="Description" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" value="Save" class="btn btn-success"><i class="fa fa-save"></i></button>
                <a asp-action="Index" class="btn btn-secondary"><i class="fa fa-arrow-left"></i></a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

