@model Veterinary.Data.Entities.Species

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Species</h4>
<div class="row">
    <div class="col-md-4">

        <form asp-action="Create" id="contactForm" name="contactForm" class="contactForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="label"></label>
                <input asp-for="Description" class="form-control" placeholder="Description" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" value="Create" class="btn btn-success"><i class="fa fa-save"></i></button>
                <a asp-action="Index" class="btn btn-secondary"><i class="fa fa-arrow-left"></i></a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


