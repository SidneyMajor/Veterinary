@model Veterinary.Data.Entities.DocumentType


<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true" data-backdrop="static" data-keyboard="false" >
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-lg-center text-primary"> </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="form">
                    <div asp-validation-summary="ModelOnly" class="alert-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    @Html.AntiForgeryToken()
                    <div class="col-md-12 m-1">
                        <div class="input-group ">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-book"></i></span>
                            </div>
                            <input asp-for="Description" class="form-control text-black-50" placeholder="Description" />
                        </div>
                        <span asp-validation-for="Description" class="alert-warning"></span>
                    </div>

                    <div class="form-group">
                        <input type="button" value="Save" class="btn btn-block badge-primary" onclick="onAddOrEditdoc()" />
                    </div>
                </form>


            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
