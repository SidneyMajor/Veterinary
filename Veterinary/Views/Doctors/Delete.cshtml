@model Veterinary.Data.Entities.Doctor
@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="justify-content-start">

        <a style="font-size: 40px"><i class="fa fa-user-md mr-2" style="color:red"></i>Delete Doctor</a>

    </div>
    <h3 class="h3" style="color:red">Are you sure you want to delete this?</h3>
    <div class="row justify-content-center">

        <div class="col-md-12">
            <div class="wrapper">

                <div class="row no-gutters">

                    <div class="col-md-7">
                        <div class="contact-wrap w-100 p-md-5 p-4" >

                            <form asp-action="Delete" id="contactForm" name="contactForm" class="contactForm">
                                <input type="hidden" asp-for="Id" />
                                <input type="hidden" asp-for="ImageUrl" />

                                <div class="row">
                                    <partial name="_DoctorParcial" />

                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <a asp-action="ListDoctor" asp-controller="Doctors" class="btn btn-outline-primary">Back to List</a>
                                            <input type="submit" value="Delete" class="btn btn-danger" />
                                        </div>
                                    </div>

                                </div>
                            </form>

                        </div>
                    </div>

                    <div class="col-md-5 d-flex align-items-stretch">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            @*<img src="@Url.Content(Model.ImageUrl)" alt="Image" style="width: 300px; height: 300px; max-width:100%;height:auto;" />*@
                            <div class="info-wrap w-100 p-5 img" style=" background-image: url( @Url.Content(Model.ImageUrl) );">
                            </div>
                        }
                        else
                        {
                            <div class="info-wrap w-100 p-5 img" style="background-image: url(@Url.Content("~/images/img.jpg") );">
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


