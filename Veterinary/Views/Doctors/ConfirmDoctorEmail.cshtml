@model Veterinary.Models.SetPasswordViewModel
@{
    ViewData["Title"] = "ConfirmDoctorEmail";
}



<div class="login-container">
    <div class="login-box">

        <div>
            <p>
                Thank you for confirming your email. Now you can login into system.
            </p>
        </div>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="contact-wrap w-100 p-md-5 p-4">

                <h2 style="font-size: 40px"><span class="flaticon-pawprint-1 mr-2" style="color:green"></span>New Password</h2>

            </div>

            <div class="form-group">
                <input asp-for="NewPassword" type="password" class="form-control" placeholder="New Password" required="required">
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Confirm" type="password" class="form-control" placeholder="Confirm" required="required">
                <span asp-validation-for="Confirm" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-primary btn-block btn-lg m-t-5" value="Change">
                <a asp-action="Login" class="btn btn-custom">Login</a>
            </div>

        </form>



    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
