@section Scripts{
    <script type="text/javascript">
        function commandClick(args) {
          
            if (args.commandColumn.type === "Edit") {
                //$("#myModal").modal('show'); Use the Modal-Improvement to be made.
                window.location.href = "/Animals/Edit?id=" + args.rowData.Id;
            }
            else if (args.commandColumn.type === "Delete") {

                window.location.href = "/Animals/Delete?id=" + args.rowData.Id;
            }
            else if (args.commandColumn.type === "Details") {

                window.location.href = "/Animals/Details?id=" + args.rowData.Id;
            }
        }

    </script>

}


