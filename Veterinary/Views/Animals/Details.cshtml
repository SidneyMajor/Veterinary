@model Veterinary.Data.Entities.Animal

@{
    ViewData["Title"] = "Details";
}


<div class="container">

    <br /><br />
    <div class="text-lg-center">
        <div class="card-header bg-info">
            <a class="text-white" style="font-size: 1.5rem"><i class="fa  fa-dog mr-2 text-white-50 "></i>@Model.Name Details</a>
        </div>
    </div>

    <div class="row justify-content-center">

        <div class="col-md-12">
            <div class="wrapper">

                <div class="row no-gutters">

                    <div class="col-md-8">
                        <div class="contact-wrap w-100 p-md-5 p-4">

                            <form asp-action="Details" method="get" id="contactForm" name="contactForm" class="contactForm">

                                <div class="row">

                                    <button class="btn btn-info btn-block mt-2" type="button" data-toggle="collapse" data-target="#collapseAnimal" aria-expanded="false" aria-controls="collapseTwo">
                                        Animal Information
                                    </button>

                                    <div class="collapse" id="collapseAnimal">
                                        <div class="card card-body bg-gradient-white">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <ejs-textbox ejs-for="Name" id="name" type="text" placeholder="Full Name" floatLabelType="Auto" readonly="true" cssClass="e-outline"></ejs-textbox>
                                                    </div>
                                                </div>

                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <ejs-textbox ejs-for="Breed" id="breed" type="text" placeholder="Breed" floatLabelType="Auto" readonly="true" cssClass="e-outline"></ejs-textbox>
                                                    </div>
                                                </div>



                                                <div class="col-md-6">
                                                    <div class="form-group pt-2 ">
                                                        <label class="text-lg-center text-info">
                                                            Gender:

                                                        </label>
                                                        <ejs-radiobutton ejs-for="Gender" id="radio1" label="Male" value="M" disabled="true"></ejs-radiobutton>
                                                        <ejs-radiobutton ejs-for="Gender" id="radio2" label="Female" value="F" disabled="true"></ejs-radiobutton>

                                                        <span asp-validation-for="Gender" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-md-6">
                                                    <div class="datepicker">
                                                        <ejs-datepicker ejs-for="DateOfBirth" format="dd-MM-yyyy" id="datetimepicker" placeholder="Date Of Birth" floatLabelType="Auto" readonly="true" cssClass="e-outline"> </ejs-datepicker>
                                                    </div>
                                                </div>

                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <ejs-textbox ejs-for="Color" id="color" placeholder="Color" type="text" floatLabelType="Auto" enabled="false" cssClass="e-outline"></ejs-textbox>
                                                    </div>
                                                </div>

                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <ejs-numerictextbox ejs-for="Weight" id="weight" placeholder="Weigth" format="###.### kg" step="0.5" min="0" floatLabelType="Auto" readonly="true" cssClass="e-outline"></ejs-numerictextbox>
                                                    </div>
                                                </div>

                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <ejs-numerictextbox ejs-for="Size" id="size" placeholder="Size" format="###.### cm" step="0.5" min="0" floatLabelType="Auto" readonly="true" cssClass="e-outline"></ejs-numerictextbox>
                                                    </div>
                                                </div>


                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <ejs-textbox id="SpeciesID" ejs-for="Species.Description" placeholder="Select a Species" floatLabelType="Auto" readonly="true" cssClass="e-outline">
                                                        </ejs-textbox>

                                                    </div>
                                                </div>


                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <ejs-textbox ejs-for="Remarks" id="remarks" placeholder="Remarks" type="text" multiline="true" floatLabelType="Auto" readonly="true" cssClass="e-outline"></ejs-textbox>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>




                                </div>


                                <div class="row">
                                    <button class="btn btn-warning btn-block mt-2" type="button" data-toggle="collapse" data-target="#collapseAppointment" aria-expanded="false" aria-controls="collapseTwo">
                                        Appointment Information
                                    </button>

                                    <div class="collapse" id="collapseAppointment">
                                        <div class="card card-body bg-gradient-info">

                                            <ejs-grid id="Grid" dataSource="ViewBag.Appointments" allowPaging="true" rowTemplate="#rowtemplate">
                                                <e-grid-pagesettings pageSize="3"></e-grid-pagesettings>
                                                <e-grid-columns>
                                                    <e-grid-column headerText="Doctor" textAlign="Center" width="150"></e-grid-column>
                                                    <e-grid-column headerText="Appointment Details" textAlign="Left" field="Id"></e-grid-column>
                                                </e-grid-columns>
                                            </ejs-grid>
                                        </div>
                                    </div>
                                </div>


                                <div class="row mt-4">

                                    <div class="col-md-12">
                                        <div class="form-group text-lg-center">
                                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning w-25">Edit</a>
                                            <a asp-action="Index" asp-controller="Animals" class="btn btn-secondary w-25"><i class="fa fa-arrow-alt-circle-left"></i>Back </a>
                                        </div>
                                    </div>

                                </div>
                            </form>

                        </div>
                    </div>

                    <div class="col-md-4 d-block align-items-lg-stretch">

                        <div class="card ml-5 mt-5  p-5 border-info">
                            <div class="card-header text-lg-center bg-info">
                                Animal picture
                            </div>
                            <div class="card-body text-lg-center">
                                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                {
                                    <img src="@Url.Content(Model.ImageUrl)" id="imgpreview" alt="image" style="max-height:88%; max-width:88%; border-radius:10px; margin:auto; cursor:pointer;" />
                                }
                                else
                                {
                                    <img src="/images/img.jpg" id="imgpreview" alt="image" style="max-height:88%; max-width:88%; border-radius:10px; margin:auto; cursor:pointer;" />
                                }
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<style type="text/css" class="cssStyles">
   

    .photo,
    .details {
        border-color: #e0e0e0;
        border-style: solid;
        color: black;
    }

    .photo {
        border-width: 1px 0px 0px 0px;
        text-align: center;
    }

    .details {
        border-width: 1px 0px 0px 0px;
        padding-left: 18px;
    }

    .e-bigger .details {
        padding-left: 25px;
    }

    .e-device .details {
        padding-left: 8px;
    }

    .details > table {
        width: 100%;
    }

    .CardHeader {
        font-weight: 600;
    }

    td {
        padding: 2px 2px 3px 4px;
    }
</style>

<script id="rowtemplate" type="text/x-template">
    <tr>
        <td class="photo">
            <b>${Doctor.FullName}</b>
        </td>
        <td class="details">
            <table class="CardTable" cellpadding="3" cellspacing="2">
                <colgroup>
                    <col width="50">
                    <col width="50">
                </colgroup>
                <tbody>
                    <tr>
                        <td class="CardHeader">Start Time</td>
                        <td>${StartTime.toLocaleString()} </td>
                    </tr>
                    <tr>
                        <td class="CardHeader">End Time</td>
                        <td>${EndTime.toLocaleString()} </td>
                    </tr>
                    <tr>
                        <td class="CardHeader">
                            Specialty
                        </td>

                        <td>
                            ${Specialty.Description}
                        </td>
                    </tr>
                    <tr>
                        <td class="CardHeader">
                            Remarks
                        </td>
                        <td>
                            ${Remarks}
                        </td>
                    </tr>
                   
                </tbody>
            </table>
        </td>
    </tr>
</script>

