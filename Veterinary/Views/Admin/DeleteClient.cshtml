@model Veterinary.Data.Entities.Client
@{
    ViewData["Title"] = "Delete";
}


<div class="container">

    <div class="card-header bg-warning text-white">
        <a style="font-size: 30px"><i class="fa fa-user-circle mr-2 text-danger"></i>Delete Client</a>
        <h3 class="h3 text-danger">Are you sure you want to delete this?</h3>
    </div>

    <div class="row justify-content-center">

        <div class="col-md-12">
            <div class="card-header bg-primary text-white">
                Profile Information
            </div>
            <div class="wrapper">

                <div class="row no-gutters bg-secondary">

                    <div class="col-md-7">
                        <div class="bg-light w-100 p-md-5 p-4">

                            <form asp-action="DeleteClient" method="post" id="contactForm" name="contactForm" class="contactForm">
                                <input type="hidden" asp-for="Id" />
                                <input type="hidden" asp-for="ImageUrl" />

                                <div class="row">
                                    <partial name="_ClientParcial" />

                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <a asp-action="ListClient" asp-controller="Admin" class="btn btn-secondary"><i class="fa fa-arrow-circle-left"></i> Back </a>
                                            <button type="submit"  class="btn btn-danger"><i class="fa fa-trash"></i> Delete</button>
                                        </div>
                                    </div>

                                </div>
                            </form>

                        </div>
                    </div>

                    <div class="col-md-4 d-block align-items-lg-stretch">

                        <div class="card ml-5 mt-5  p-5 border-info">
                            <div class="card-header text-lg-center bg-info ">
                                Porfile picture
                            </div>
                            <div class="card-body text-lg-center">
                                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                {
                                    <img src="@Url.Content(Model.ImageUrl)" alt="image" style="max-height:88%; max-width:88%; border-radius:10px; margin:auto; cursor:pointer;" />
                                }
                                else
                                {
                                    <img src="/images/img.jpg" alt="image" style="max-height:88%; max-width:88%; border-radius:10px; margin:auto; cursor:pointer;" />
                                }
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
