@model Veterinary.Data.Entities.Client
@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="justify-content-start">

        <a style="font-size: 40px"><i class="fa fa-user mr-2" style="color:red"></i>Delete User</a>

    </div>
    <h3 class="h3" style="color:red">Are you sure you want to delete this?</h3>
    <div class="row justify-content-center">

        <div class="col-md-12">
            <div class="wrapper">

                <div class="row no-gutters">

                    <div class="col-md-7">
                        <div class="contact-wrap w-100 p-md-5 p-4" style="background-color:lightcyan">

                            <form asp-action="Delete" id="contactForm" name="contactForm" class="contactForm">
                                <input type="hidden" asp-for="Id" />
                                <input type="hidden" asp-for="ImageUrl" />

                                <div class="row">
                                    <partial name="_ClientParcial" />

                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <a asp-action="ListClient" asp-controller="Admin" class="btn btn-outline-primary">Back to List</a>
                                            <input type="submit" value="Delete" class="btn btn-danger" />
                                        </div>
                                    </div>

                                </div>
                            </form>

                        </div>
                    </div>

                    <div class="col-md-5 d-flex align-items-stretch">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <div class="col-md-12 d-flex align-items-center">
                                <img src="@Url.Content(Model.ImageUrl)" id="imgpreview" alt="image" class="info-wrap p-5 w-75 img-circle" />
                            </div>
                        }
                        else
                        {
                            <div class="col-md-12 d-flex align-items-center">
                                <img src="../images/img.jpg" id="imgpreview" alt="image" class="info-wrap p-5 w-75 img-circle" />
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


