@model Veterinary.Data.Entities.Client
@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="justify-content-start">

        <a style="font-size: 40px"><i class="fa fa-user mr-2" style="color:red"></i>Delete</a>

    </div>
    <h3 class="h3" style="color:red">Are you sure you want to delete this?</h3>
    <div class="row justify-content-center">

        <div class="col-md-12">
            <div class="wrapper">

                <div class="row no-gutters">

                    <div class="col-md-7">
                        <div class="contact-wrap w-100 p-md-5 p-4" style="background-color:lightcyan">

                            <form asp-action="Delete" id="contactForm" name="contactForm" class="contactForm">
                                <input type="hidden" asp-for="Id" />
                                <input type="hidden" asp-for="ImageUrl" />

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <ejs-textbox ejs-for="FullName" id="fullname" type="text" placeholder="Full Name" floatLabelType="Always" readonly="true"></ejs-textbox>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <ejs-textbox ejs-for="Nationality" id="nationality" placeholder="Nationality" type="text" floatLabelType="Always" readonly="true"></ejs-textbox>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <h3>Gender</h3>
                                            <ejs-radiobutton ejs-for="Gender" id="radio1" label="M" value="M" disabled="true"></ejs-radiobutton>
                                            <ejs-radiobutton ejs-for="Gender" id="radio2" label="F" value="F" disabled="true"></ejs-radiobutton>
                                        </div>
                                    </div>

                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <ejs-textbox ejs-for="Address" id="address" placeholder="Address" type="text" floatLabelType="Always" readonly="true"></ejs-textbox>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <ejs-textbox ejs-for="ZipCode" id="zipcode" placeholder="Zip Code" type="text" floatLabelType="Always" readonly="true"></ejs-textbox>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <ejs-textbox ejs-for="TaxNumber" id="taxnumber" placeholder="Tax Number" type="text" floatLabelType="Always" readonly="true"></ejs-textbox>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <ejs-textbox id="DocumentType" ejs-for="DocumentType.Description" placeholder="Document" type="text" floatLabelType="Always" readonly="true">
                                            </ejs-textbox>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <ejs-textbox ejs-for="Document" id="document" placeholder="Nº Document" type="text" floatLabelType="Always" readonly="true"></ejs-textbox>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <ejs-textbox ejs-for="PhoneNumber" id="phoneNumber" placeholder="Phone Number" type="text" floatLabelType="Always" readonly="true"></ejs-textbox>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="datepicker">
                                            <ejs-datepicker ejs-for="DateOfBirth" format="dd-MM-yyyy" id="datetimepicker" placeholder="Date Of Birth" floatLabelType="Always" readonly="true"> </ejs-datepicker>
                                        </div>
                                    </div>

                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <a asp-action="ListClient" asp-controller="Account" class="btn btn-outline-primary">Back to List</a>
                                            <input type="submit" value="Delete" class="btn btn-danger" />
                                        </div>
                                    </div>

                                </div>
                            </form>

                        </div>
                    </div>

                    <div class="col-md-5 d-flex align-items-stretch">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            @*<img src="@Url.Content(Model.ImageUrl)" alt="Image" style="width: 300px; height: 300px; max-width:100%;height:auto;" />*@
                            <div class="info-wrap w-100 p-5 img" style=" background-image: url( @Url.Content(Model.ImageUrl) );">
                            </div>
                        }
                        else
                        {
                            <div class="info-wrap w-100 p-5 img" style="background-image: url(@Url.Content("~/images/img.jpg") );">
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


