@model Veterinary.Models.LoginViewModel
@{ ViewData["Title"] = "Login"; }

@using Syncfusion.EJ2.SplitButtons;
@{ var spinRight = new ProgressButtonSpinSettings() { Position = SpinPosition.Right }; }


<div class="login-container row mt-5">
    <div class="login-box col-md-5">

        <form method="post" asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="alert-danger"></div>

            <div class="card">
                <div class="card-header bg-info text-lg-center">
                    <h2 style="font-size:30px"><span class="flaticon-pawprint-1 mr-2 text-white-50"></span>Login</h2>
                </div>

                <div class="card-body">

                    <div class="form-group">
                        <ejs-textbox id="loginusername" ejs-for="Username" type="email" cssClass="e-outline" floatLabelType="Auto" placeholder="email@recover.com"></ejs-textbox>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <ejs-textbox id="loginpw" ejs-for="Password" type="password" cssClass="e-outline" floatLabelType="Auto" placeholder="Password"></ejs-textbox>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group small clearfix e-block">
                        <div class="text-wrap">
                           <ejs-checkbox id="logincheck" ejs-for="RememberMe" label="Remember me" cssClass="logincheck"></ejs-checkbox>  
                           <a asp-controller="Account" asp-action="RecoverPassword" class="e-btn text-lowercase text-info">Forgot Password?</a>
                            
                        </div>


                    </div>
                </div>

                <div class="card-footer border-dark bg-light">
                    <div class="form-group">
                        <ejs-progressbutton id="spinright" content="Login" isPrimary="true" spinSettings="spinRight" cssClass="e-success e-block"></ejs-progressbutton>
                        <div class="e-btn e-info e-block mt-2 ml-10 text-wrap">Don't have an account? <a asp-controller="Account" asp-action="Register" class="text-warning m-3"><b><i class="fa fa-sign-in-alt"></i> Register</b></a></div>
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}