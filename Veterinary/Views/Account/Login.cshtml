@model Veterinary.Models.LoginViewModel
@{ ViewData["Title"] = "Login"; }



<div class="login-container">
    <div class="box">

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="contact-wrap w-100 p-md-5 p-4">

                <h2 style="font-size: 60px"><span class="flaticon-pawprint-1 mr-2" style="color:green"></span>Login</h2>

            </div>

            <div class="form-group">
                <input asp-for="Username" type="text" class="form-control" placeholder="Username" required="required">
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password" required="required">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group small clearfix">
                <label class="form-check-label "><input asp-for="RememberMe" type="checkbox"> Remember me</label>
                <a href="#" class=" m-2 p-5">Forgot Password?</a>
            </div>
            <input type="submit" class="btn btn-primary btn-block btn-lg" value="Login">
        </form>
        <div class="text-center small m-4">Don't have an account? <a asp-controller="Account" asp-action="Register" class="">Register</a></div>

       
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}