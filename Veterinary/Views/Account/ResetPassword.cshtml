@model Veterinary.Models.ResetPasswordViewModel

@using Syncfusion.EJ2.SplitButtons;
@{
    var spinRight = new ProgressButtonSpinSettings() { Position = SpinPosition.Right };

}

@{
    ViewData["Title"] = "Reset Password";
}

<div class="login-container row mt-5">
    <div class="login-box col-md-5">

        <form method="post" asp-action="ResetPassword">
            <div asp-validation-summary="All" class="alert-danger"></div>
            <input type="hidden" asp-for="Token" />
            <div class="card">
                <div class="card-header bg-info text-lg-center">
                    <h2 style="font-size:30px"><span class="flaticon-pawprint-1 mr-2 text-white-50"></span>Reset Password</h2>
                </div>

                <div class="card-body">

                    <div class="form-group">
                        <ejs-textbox id="restusername" ejs-for="Username" type="email" cssClass="e-outline" floatLabelType="Auto" placeholder="email@recover.com"></ejs-textbox>
                        <span asp-validation-for="Username" class="alert-danger"></span>
                    </div>
                    <div class="form-group">
                        <ejs-textbox id="restpw" ejs-for="Password" type="password" cssClass="e-outline" floatLabelType="Auto" placeholder="Password"></ejs-textbox>
                        <span asp-validation-for="Password" class="alert-danger"></span>
                    </div>
                    <div class="form-group">
                        <ejs-textbox id="restconfirmpw" ejs-for="ConfirmPassword" type="password" cssClass="e-outline" floatLabelType="Auto" placeholder="Confirm Password"></ejs-textbox>
                        <span asp-validation-for="ConfirmPassword" class="alert-danger"></span>
                    </div>
                </div>

                <div class="card-footer border-dark bg-light">
                    <div class="form-group">
                        <ejs-progressbutton id="spinright" content="Submit" isPrimary="true" spinSettings="spinRight" cssClass="e-success e-block"></ejs-progressbutton>
                        <a asp-action="Login" class="e-btn e-secondary e-block mt-2 "><b><i class="fa fa-sign-in-alt"></i> Login</b></a>
                    </div>
                </div>
            </div>
        </form>

        <div class="card-footer bg-light border-0">
            <div class="alert-success text-lg-center">

                @ViewBag.Message

            </div>
        </div>

    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}